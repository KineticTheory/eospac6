      override EXE = $(sort $(filter $(EXE1),$(EXE0)))
      ifeq ($(strip $(EXE)),)
        EXE1 = $(foreach v,$(SERIES),$(shell egrep -l -e '(ingroup.*$(v)[ ])' -e '(ingroup.*$(v)$$)' $(SRCS_ALL)) $(wildcard *.$(v)))
        override EXE = $(sort $(basename $(EXE1)))
      endif
    endif
  else
    override EXE = $(strip $(EXE0))
  endif
endif

